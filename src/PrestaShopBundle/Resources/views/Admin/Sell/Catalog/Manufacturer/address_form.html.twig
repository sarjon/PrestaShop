{% extends 'PrestaShopBundle:Admin:layout.html.twig' %}
{% trans_default_domain 'Admin.Catalog.Feature' %}

{% block content %}
  <div class="container">
    <div class="row">
      <div class="col">
        {% block admin_form_brand %}
          {{ form_start(manufacturerAddressForm) }}
          <div class="card">
            <h3 class="card-header">
              <i class="material-icons">location_city</i> {{ 'Addresses'|trans }}
            </h3>
            <div class="card-body">
              <div class="form-group">
                <label class="form-control-label">{{ 'Choose the brand'|trans() }}</label>
                {{ form_errors(manufacturerAddressForm.manufacturer) }}
                {{ form_widget(manufacturerAddressForm.manufacturer) }}
              </div>

              <div class="form-group">
                {{ ps.label_with_help('First name'|trans({}, 'Admin.Global'), ('Invalid characters:'|trans({}, 'Admin.Notifications.Info')~' 0-9!&lt;&gt;,;?=+()@#"�{}_$%:')) }}
                {{ form_errors(manufacturerAddressForm.first_name) }}
                {{ form_widget(manufacturerAddressForm.first_name) }}
              </div>

              <div class="form-group">
                {{ ps.label_with_help('Last name'|trans({}, 'Admin.Global'), ('Invalid characters:'|trans({}, 'Admin.Notifications.Info')~' 0-9!&lt;&gt;,;?=+()@#"�{}_$%:')) }}
                {{ form_errors(manufacturerAddressForm.last_name) }}
                {{ form_widget(manufacturerAddressForm.last_name) }}
              </div>

              <div class="form-group">
                <label class="form-control-label">{{ 'Address'|trans({}, 'Admin.Global') }}</label>
                {{ form_errors(manufacturerAddressForm.address1) }}
                {{ form_widget(manufacturerAddressForm.address1) }}
              </div>

              <div class="form-group">
                <label class="form-control-label">{{ 'Address (2)'|trans({}, 'Admin.Global') }}</label>
                {{ form_errors(manufacturerAddressForm.address2) }}
                {{ form_widget(manufacturerAddressForm.address2) }}
              </div>

              <div class="form-group">
                <label class="form-control-label">{{ 'Zip/postal code'|trans({}, 'Admin.Global') }}</label>
                {{ form_errors(manufacturerAddressForm.postcode) }}
                {{ form_widget(manufacturerAddressForm.postcode) }}
              </div>

              <div class="form-group">
                <label class="form-control-label">{{ 'City'|trans({}, 'Admin.Global') }}</label>
                {{ form_errors(manufacturerAddressForm.city) }}
                {{ form_widget(manufacturerAddressForm.city) }}
              </div>

              <div class="form-group">
                <label class="form-control-label">{{ 'Country'|trans({}, 'Admin.Global') }}</label>
                {{ form_errors(manufacturerAddressForm.country) }}
                {{ form_widget(manufacturerAddressForm.country) }}
              </div>

              <div class="form-group">
                <label class="form-control-label">{{ 'State'|trans({}, 'Admin.Global') }}</label>
                {{ form_errors(manufacturerAddressForm.state) }}
                {{ form_widget(manufacturerAddressForm.state) }}
              </div>

              <div class="form-group">
                <label class="form-control-label">{{ 'Home phone'|trans({}, 'Admin.Global') }}</label>
                {{ form_errors(manufacturerAddressForm.phone) }}
                {{ form_widget(manufacturerAddressForm.phone) }}
              </div>

              <div class="form-group">
                <label class="form-control-label">{{ 'Phone'|trans({}, 'Admin.Global') }}</label>
                {{ form_errors(manufacturerAddressForm.phone_mobile) }}
                {{ form_widget(manufacturerAddressForm.phone_mobile) }}
              </div>

              <div class="form-group">
                <label class="form-control-label">{{ 'Other'|trans({}, 'Admin.Global') }}</label>
                {{ form_errors(manufacturerAddressForm.other) }}
                {{ form_widget(manufacturerAddressForm.other) }}
              </div>

              {{ form_rest(manufacturerAddressForm) }}
            </div>
            <div class="card-footer">
              <div class="d-flex justify-content-end">
                <button class="btn btn-primary">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
              </div>
            </div>
          </div>
          {{ form_end(manufacturerAddressForm) }}
        {% endblock %}
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('../js/tiny_mce/tiny_mce.js') }}"></script>
  <script src="{{ asset('../js/admin/tinymce.inc.js') }}"></script>
  <script src="{{ asset('../js/admin/tinymce_loader.js') }}"></script>
  <script src="{{ asset('themes/new-theme/public/manufacturer.bundle.js') }}"></script>
{% endblock %}
