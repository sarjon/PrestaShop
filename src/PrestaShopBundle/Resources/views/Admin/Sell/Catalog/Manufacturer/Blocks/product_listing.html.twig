{% trans_default_domain 'Admin.Catalog.Feature' %}

<div class="card">
  <h3 class="card-header">
    {{ 'Products'|trans({}, 'Admin.Global') }} ({{ manufacturerProducts|length }})
  </h3>
  <div class="card-body">
    {% if manufacturerProducts is not empty %}
      {% for product in manufacturerProducts %}
        <div class="card">
          <div class="card-header">
            <a href="{{ path('admin_product_form', {'id': product.id}) }}">
              {{ product.name|upper }}
            </a>

            <div class="btn-toolbar float-right" role="toolbar">
              {% block manufacturer_product_listing_toolbar_buttons %}
                {% include '@PrestaShop/Admin/Sell/Catalog/Manufacturer/Blocks/toolbar_button.html.twig' with {'title':  'Edit'|trans({}, 'Admin.Actions'), 'icon': 'edit', 'product': product} %}
                {% include '@PrestaShop/Admin/Sell/Catalog/Manufacturer/Blocks/toolbar_button.html.twig' with {'title':  'Delete'|trans({}, 'Admin.Actions'), 'icon': 'delete', 'product': product} %}
              {% endblock %}
            </div>
          </div>

          <div class="card-body">
            {% block manufacturer_products_table %}
              {% include '@PrestaShop/Admin/Sell/Catalog/Manufacturer/Blocks/products_table.html.twig' %}
            {% endblock %}
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>
