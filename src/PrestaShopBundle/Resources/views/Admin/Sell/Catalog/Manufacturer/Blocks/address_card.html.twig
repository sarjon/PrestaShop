{% trans_default_domain 'Admin.Catalog.Feature' %}

{% block manufacturer_address_card %}
<div class="card">
  <div class="card-header">
    {{ address.firstname|upper }} {{ address.lastname|upper }}
  </div>
  <div class="card-body">
    <p class="card-text mb-0">{{ address.address1 }}</p>
    {% if address.address2 %}
      <p class="card-text mb-0">{{ address.address2 }}</p>
    {% endif %}
    <p class="card-text mb-0">{{ address.postcode ~ ' ' ~ address.city }}</p>
    {% if address.state %}
      <p class="card-text mb-0">{{ address.state }}</p>
    {% endif %}
    <p class="card-text mb-0"><strong>{{ address.country }}</strong></p>
    {% if address.phone %}
      <p class="card-text mb-0">{{ address.phone }}</p>
    {% endif %}
    {% if address.phone_mobile %}
      <p class="card-text mb-0">{{ address.phone_mobile }}</p>
    {% endif %}
    {% if address.other %}
      <div>{{ address.other|nl2br }}</div>
    {% endif %}
  </div>
</div>
{% endblock %}
