{% extends 'PrestaShopBundle:Admin:layout.html.twig' %}
{% trans_default_domain 'Admin.Catalog.Feature' %}

{% block content %}
  <div class="container">
    <div class="row">
      <div class="col">
        {% block admin_form_brand %}
          {{ form_start(manufacturerForm, {'action': path('admin_manufacturers_add')}) }}
          <div class="card">
            <h3 class="card-header">
              <i class="material-icons">branding_watermark</i> {{ 'Brands'|trans }}
            </h3>
            <div class="card-body">
              <div class="form-group">
                {{ ps.label_with_help('Name'|trans({}, 'Admin.Global'), ('Invalid characters:'|trans({}, 'Admin.Notifications.Info')~' &lt;&gt;;=#{}')) }}
                {{ form_errors(manufacturerForm.name) }}
                {{ form_widget(manufacturerForm.name) }}
              </div>

              <div class="form-group">
                {{ ps.label_with_help('Short description'|trans({}, 'Admin.Catalog.Feature'), ('Invalid characters:'|trans({}, 'Admin.Notifications.Info')~' &lt;&gt;;=#{}')) }}
                {{ form_errors(manufacturerForm.short_description) }}
                {{ form_widget(manufacturerForm.short_description) }}
              </div>

              <div class="form-group">
                {{ ps.label_with_help('Description'|trans({}, 'Admin.Global'), ('Invalid characters:'|trans({}, 'Admin.Notifications.Info')~' &lt;&gt;;=#{}')) }}
                {{ form_errors(manufacturerForm.description) }}
                {{ form_widget(manufacturerForm.description) }}
              </div>

              <div class="form-group">
                {{ ps.label_with_help('Logo'|trans({}, 'Admin.Global'), ('Upload a brand logo from your computer.'|trans({}, 'Admin.Catalog.Help'))) }}
                {{ form_errors(manufacturerForm.logo) }}
                {{ form_widget(manufacturerForm.logo) }}
              </div>

              <div class="form-group">
                {{ ps.label_with_help('Meta title'|trans({}, 'Admin.Global'), ('Invalid characters:'|trans({}, 'Admin.Notifications.Info')~' &lt;&gt;;=#{}')) }}
                {{ form_errors(manufacturerForm.meta_title) }}
                {{ form_widget(manufacturerForm.meta_title) }}
              </div>

              <div class="form-group">
                {{ ps.label_with_help('Meta description'|trans({}, 'Admin.Global'), ('Invalid characters:'|trans({}, 'Admin.Notifications.Info')~' &lt;&gt;;=#{}')) }}
                {{ form_errors(manufacturerForm.meta_description) }}
                {{ form_widget(manufacturerForm.meta_description) }}
              </div>

              <div class="form-group">
                {% set helpMessage = 'Invalid characters:'|trans({}, 'Admin.Notifications.Info')~' &lt;&gt;;=#{} ' %}
                {% set helpMessage = helpMessage~'To add "tags," click inside the field, write something, and then press "Enter."'|trans({}, 'Admin.Catalog.Help') %}

                {{ ps.label_with_help('Meta keywords'|trans({}, 'Admin.Global'), helpMessage) }}
                {{ form_errors(manufacturerForm.meta_keywords) }}
                {{ form_widget(manufacturerForm.meta_keywords) }}
              </div>

              <div class="form-group">
                <label class="form-control-label">{{ 'Enable'|trans({}, 'Admin.Actions') }}</label>
                {{ form_errors(manufacturerForm.active) }}
                {{ form_widget(manufacturerForm.active) }}
              </div>

              {{ form_rest(manufacturerForm) }}
            </div>
            <div class="card-footer">
              <div class="d-flex justify-content-end">
                <button class="btn btn-primary">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
              </div>
            </div>
          </div>
          {{ form_end(manufacturerForm) }}
        {% endblock %}
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('../js/tiny_mce/tiny_mce.js') }}"></script>
  <script src="{{ asset('../js/admin/tinymce.inc.js') }}"></script>
  <script src="{{ asset('../js/admin/tinymce_loader.js') }}"></script>
  <script src="{{ asset('themes/new-theme/public/manufacturer.bundle.js') }}"></script>
{% endblock %}
