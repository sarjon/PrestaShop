{% trans_default_domain "Admin.Advparameters.Feature" %}
{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

<table class="table">
  <thead class="thead-default">
    <tr class="column-headers">
      <th scope="col">
        {{ 'ID'|trans({}, 'Admin.Global') }}
        {{ ps.sort_arrows('id_log') }}
      </th>
      <th scope="col">
        {{ 'First name'|trans({}, 'Admin.Global') }}
        {{ ps.sort_arrows('id_employee') }}
      </th>
      <th scope="col">
        {{ 'Last name'|trans }}
        {{ ps.sort_arrows('severity') }}
      </th>
      <th scope="col">
        {{ 'Email address'|trans({}, 'Admin.Global') }}
        {{ ps.sort_arrows('message') }}
      </th>
      <th scope="col">
        {{ 'Profile'|trans }}
        {{ ps.sort_arrows('object_type') }}
      </th>
      <th scope="col" class="text-center">
        {{ 'Active'|trans }}
        {{ ps.sort_arrows('object_id') }}
      </th>
      <th scope="col">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
  {% for employee in employees %}
    <tr>
      <th scope="row">{{ employee.id_employee }}</th>
      <td>{{ employee.firstname }}</td>
      <td>{{ employee.lastname }}</td>
      <td>{{ employee.email }}</td>
      <td>{{ employee.profile_name }}</td>
      <td class="text-center">
        {% if employee.active %}
            <i class="material-icons text-success">check</i>
        {% else %}
            <i class="material-icons text-danger">clear</i>
        {% endif %}
      </td>
      <td>
        <div class="btn-group-action">
          <div class="btn-group">
              <i class="material-icons">mode_edit</i>
          </div>
          {% if employee.id_employee != current_employee_id %}
          <a class="btn btn-link dropdown-toggle dropdown-toggle-split product-edit"
             data-toggle="dropdown"
             aria-haspopup="true"
             aria-expanded="false"
          >
          </a>
          <div class="dropdown-menu dropdown-menu-right">
            <a class="dropdown-item product-edit" href="#">
              <i class="material-icons">delete</i>
              {{ 'Delete'|trans({}, 'Admin.Actions') }}
            </a>
          </div>
          {% endif %}
        </div>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>